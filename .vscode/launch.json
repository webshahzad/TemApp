{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Install & Run",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
      "request": "launch",
      "platform": "android",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/.vscode/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "env": {
        "ENV": "dev",
      },
    },
    {
      "name": "Clean & Install & Run",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
      "request": "launch",
      "platform": "android",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/.vscode/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "preLaunchTask": "Clean Android Build",
      "env": {
        "ENV": "dev",
      },
    },
    {
      "name": "Attach",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
      "request": "attach",
      "preLaunchTask": "npm: start:prepare",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/.vscode/**/*.js",
        "<node_internals>/**/*.js"
      ],
    },
  ]
}
